---
export interface Props {
  tags: any[];
}

const { tags } = Astro.props;
---

<ul>
  {
    tags.sort().map((tag) => (
      <li>
        <a href={`/tags/${tag}`}>{tag}</a>
      </li>
    ))
  }
</ul>

<style>
  ul {
    list-style-type: none;
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    padding: 0;
  }
  a {
    text-decoration: none;
    text-transform: uppercase;
    font-size: 0.9rem;
    display: block;
  }
  a::after {
    content: "â€¢";
    padding: 0 0.25rem;
  }
  ul > :last-child::after {
    content: none;
  }
</style>
