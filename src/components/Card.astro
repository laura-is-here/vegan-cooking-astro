---
export interface Props {
  title: string;
  body: string;
  href: string;
  tags: [];
}

const { href, title, body, tags } = Astro.props;
---

<li class="link-card">
  <h2>
      <a href={href}>
        {title}
      </a>
    </h2>
    <p>
      {body}
    </p>
</li>
<style>
  .link-card {
    --flow-space: 1.5rem;
    --border-color: hsl(var(--accent-200));
    list-style: none;
    border-radius: 0.35rem;
    padding: 1.25rem;
    border: 1px solid var(--border-color);
    box-shadow: 6px 6px 0 hsl(var(--accent-700));
    background-color:hsl(var(--accent-100));
    position: relative;
  }

  a {
    width: 100%;
    text-decoration: none;
    color: #444;
    font-weight: unset;
  }
  a::after {
    content: "";
    position: absolute;
    inset: 0;
  }
  h2 {
    margin: 0;
    /* transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1); */
    font-size: var(--step-1);
  }
  p {
    margin-top: 0.5rem;
    margin-bottom: 0;
    color: #444;
  }
